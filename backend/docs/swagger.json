{
    "swagger": "2.0",
    "info": {
        "description": "Backend for the aggregate-site project",
        "title": "aggregate-site-backend",
        "contact": {},
        "license": {
            "name": "MIT"
        },
        "version": "1.0"
    },
    "host": "localhost:5000",
    "basePath": "/",
    "paths": {
        "/query": {
            "get": {
                "description": "Consume lat, long, and current params, and return a list of events that are separated by categories",
                "produces": [
                    "application/json"
                ],
                "tags": [
                    "query"
                ],
                "summary": "Query the backend for relevant events surrounding a coordinate",
                "parameters": [
                    {
                        "type": "number",
                        "format": "float64",
                        "description": "latitude of the place",
                        "name": "lat",
                        "in": "query",
                        "required": true
                    },
                    {
                        "type": "number",
                        "format": "float64",
                        "description": "longitude of the place",
                        "name": "long",
                        "in": "query",
                        "required": true
                    },
                    {
                        "type": "integer",
                        "description": "1 for present, 0 for past, any for all",
                        "name": "current",
                        "in": "query"
                    }
                ],
                "responses": {
                    "200": {
                        "description": "OK"
                    },
                    "400": {
                        "description": "Bad Request"
                    }
                }
            }
        }
    }
}